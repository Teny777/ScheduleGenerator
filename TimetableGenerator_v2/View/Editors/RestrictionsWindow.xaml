            <!--                    TextWrapping="Wrap" -->
            <!--                    TextAlignment="Left" -->
            <!--                    Margin="3"/> -->
            <!--     </Grid> -->
            <!-- </GroupBox> -->
            
            <GroupBox Grid.Row="1"
                      Header="Параметры генерации">
                <StackPanel>
                    <GroupBox Header="Поколений">
                        <xctk:IntegerUpDown Minimum="1"
                                            TextAlignment="Left"
                                            Value="{Binding GenerationCount}" />
                    </GroupBox>
                    <GroupBox Header="Особей в поколении">
                        <xctk:IntegerUpDown Minimum="2"
                                            TextAlignment="Left"
                                            Value="{Binding IndividualCount}" />
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
