            <!--                   VerticalAlignment="Center" -->
            <!--                   IsChecked="{Binding IsMaxTeacherHoursChecked}"/> -->
            <!--         <TextBlock Grid.Row="0" -->
            <!--                    Grid.Column="1" -->
            <!--                    Text="Максимальная нагрузка учителя в неделю - 36 часов" -->
            <!--                    TextWrapping="Wrap" -->
            <!--                    TextAlignment="Left" -->
            <!--                    Margin="3"/> -->
            <!--          -->
            <!--         <CheckBox Grid.Row="1" -->
